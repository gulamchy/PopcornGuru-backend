{
  "version": 2,
  "name": "PopcornGuru-backend",
  "functions": {
    "api/*.js": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://popcorn-guru-frontend.vercel.app"
        },
        { "key": "Access-Control-Allow-Methods", "value": "POST,GET" }
      ]
    }
  ]
}
