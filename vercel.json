{
  "version": 2,
  "name": "PopcornGuru-backend",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/recommend", "destination": "/api/index.js" },
    { "source": "/movies", "destination": "/api/index.js" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://popcorn-guru-frontend.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST,GET"
        }
      ]
    }
  ]
}
