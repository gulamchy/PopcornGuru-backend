{
  "version": 2,
  "name": "PopcornGuru-backend",
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node",
      "config": {
        "memory": 512,
        "maxDuration": 30
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://popcorn-guru-frontend.vercel.app"
        },
        { 
          "key": "Access-Control-Allow-Methods", 
          "value": "POST,GET" 
        }
      ]
    }
  ]
}
