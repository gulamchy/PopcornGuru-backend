{
  "version": 2,
  "name": "PopcornGuru-backend",
  "functions": {
    "index.js": {
      "maxDuration": 30,
      "memory": 4096
    }
  },
  "rewrites": [{ "source": "/(.*)", "destination": "index.js" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://popcorn-guru-frontend.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST,GET"
        }
      ]
    }
  ]
}
